    }
  },
  {
    "content_id": 755752,
    "reference_id": 19187,
    "title": "مراثي إرميا 2: 18–19",
    "media_type": "Text",
    "index_reference": "25002018-25002019",
    "language": "arb",
    "content": "<p>التوبة والصلاة هما الاستجابتان المناسبتان لمواجهة هلاك دينونة الله.</p>",
    "associations": {
      "passage": [
        {
          "start_ref": "25002018",
          "start_ref_usfm": "LAM 2:18",
          "end_ref": "25002019",
          "end_ref_usfm": "LAM 2:19"
        }
